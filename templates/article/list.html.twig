{% extends 'base.html.twig' %}

{% block body %}
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#list">List</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#create">Create new</a>
        </li>
        {% endif %}
    </ul>
    <div class="tab-content my-4">
        <div class="tab-pane active container" id="list">
            <h4 class="font-weight-bold mx-2">All articles</h4>

            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Author</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Status</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                    {% for article in pager %}
                        <tr>
                            {% if false == article.isPublished and is_granted('ROLE_ADMIN') %}
                                {{ include('article/_list_table.htm.twig') }}

                            {% elseif article.isPublished %}
                                {{ include('article/_list_table.htm.twig') }}
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <td>
                                    {{ article.isPublished ? 'published' : 'saved to draft' }}
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    {{ pagerfanta(pager) }}
                </tbody>
            </table>
        </div>

        {# CREATE FORM #}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="tab-pane container" id="create">
                {{ form|raw }}
            </div>
        {% endif %}
    </div>
{% endblock %}